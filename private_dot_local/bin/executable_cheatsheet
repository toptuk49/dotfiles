#!/bin/bash

# Description:
source "$(dirname "$0")/cheatsheets-src/config.sh"
source "$(dirname "$0")/cheatsheets-src/utils.sh"

handle_argument() {
	local argument=$1

	case "$argument" in
	-l | --list)
		list_cheatsheets
		;;
	*)
		local cheatsheet=$1

		if [ -n "$cheatsheet" ]; then
			if [ -f "$CHEATSHEETS_DIR/$cheatsheet.sh" ]; then
				run_cheatsheet $cheatsheet
			else
				echo "Error: No cheatsheet found for '$cheatsheet'" >&2
				show_usage
				exit 1
			fi
		else
			show_usage
		fi
		;;
	esac
}

handle_argument $1
exit 0
